<h1>New User Form</h1>

<%= form_for(@user) do |f| %>
  <%= f.label :name %><br><br>
  <%= f.text_field :name %><br><br>

  <%= f.label :password %><br><br>
  <%= f.password_field :password %><br><br>

  <%= f.label :password_confirmation %><br><br>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Submit" %>
<% end %>
